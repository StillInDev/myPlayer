<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the Menu Screen!'
        Button:
            text: 'Go to Settings'
            on_release: app.root.current = 'settings'

<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the Settings Screen!'
        Button:
            text: 'Go to Menu'
            on_release: app.root.current = 'menu'
