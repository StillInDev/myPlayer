<MenuScreen>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the Menu Screen!'
        Button:
            text: 'Go to Settings'
            on_release: app.root.current = 'settings'
        Button:
            text: 'Go to Play'
            on_release: app.root.current = 'play'
        Button:
            text: 'Go to Library'
            on_release: app.root.current = 'library'

<PlayScreen>:
    orientation: 'vertical'
    BoxLayout:
        id: PlayMusicScreen
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: back_button
                text: 'Back'
                on_press: root.back_song()
            Button:
                id: play_button     # Add an id to the button
                text: 'Play'
                background_color: 1, 0, 0, 1  # Initial color (red)
                on_press:
                    self.background_color = 0, 1, 0, 1  # On press (green)
                    root.play_song()
                on_release: self.background_color = 1, 0, 0, 1  # On release (back to red)
            Button:
                id: skip_button
                text: 'Next'
                on_press: root.skip_song()
        BoxLayout:
            size_hint_y: 0.3
            orientation: 'horizontal'
            Button:
                id: home_button
                text: 'Home'
                on_release: app.root.current = 'menu'

<LibraryScreen>:
    orientation: 'vertical'


<ButtonListItem>:
    orientation: 'vertical'
    spacing: 10
    Button:
        on_release:
            app.root.current = 'playMusicScreen'

<SongButton>:
    on_release:
        app.root.current = 'playMusicScreen'
        app.playMusicScreen.play_song(select=root.text)


<SettingsScreen>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to the Settings Screen!'
        Button:
            text: 'Go to Menu'
            on_release: app.root.current = 'menu'


